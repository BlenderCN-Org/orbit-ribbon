  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  xmlns="http://www.orbit-ribbon.org/ORFontDesc"
  targetNamespace="http://www.orbit-ribbon.org/ORFontDesc">

  <xsd:annotation>
    <xsd:documentation xml:lang="en">
