<?xml version='1.0' encoding='ASCII'?>

<orsave:presets xmlns:orsave="http://www.orbit-ribbon.org/ORSave" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

<preset>
	<presetName>Default Keyboard Mapping</presetName>
	<inputDevice device="Keyboard">
		<axis_bind action="TranslateX">
			<input xsi:type="orsave:PseudoAxisInputType" posInvert="false" negInvert="true">
				<negative xsi:type="orsave:KeyInputType" key="97" />
				<positive xsi:type="orsave:KeyInputType" key="100" />
			</input>
		</axis_bind>
		<axis_bind action="TranslateY">
			<input xsi:type="orsave:PseudoAxisInputType" posInvert="false" negInvert="true">
				<negative xsi:type="orsave:KeyInputType" key="119" />
				<positive xsi:type="orsave:KeyInputType" key="115" />
			</input>
		</axis_bind>
		<axis_bind action="TranslateZ">
			<input xsi:type="orsave:PseudoAxisInputType" posInvert="false" negInvert="true">
				<negative xsi:type="orsave:KeyInputType" key="113" />
				<positive xsi:type="orsave:KeyInputType" key="101" />
			</input>
		</axis_bind>
		<axis_bind action="RotateX">
			<input xsi:type="orsave:PseudoAxisInputType" posInvert="false" negInvert="true">
				<negative xsi:type="orsave:KeyInputType" key="105" />
				<positive xsi:type="orsave:KeyInputType" key="107" />
			</input>
		</axis_bind>
		<axis_bind action="RotateY">
			<input xsi:type="orsave:PseudoAxisInputType" posInvert="false" negInvert="true">
				<negative xsi:type="orsave:KeyInputType" key="106" />
				<positive xsi:type="orsave:KeyInputType" key="108" />
			</input>
		</axis_bind>
		<axis_bind action="RotateZ">
			<input xsi:type="orsave:PseudoAxisInputType" posInvert="false" negInvert="true">
				<negative xsi:type="orsave:KeyInputType" key="117" />
				<positive xsi:type="orsave:KeyInputType" key="111" />
			</input>
		</axis_bind>
		<button_bind action="Pause">
			<input xsi:type="orsave:KeyInputType" key="27" />
		</button_bind>
	</inputDevice>
</preset>

<preset>
	<presetName>Default Mouse Mapping</presetName>
	<inputDevice device="Mouse">
		<axis_bind action="RotateX">
			<input xsi:type="orsave:MouseMovementInputType" axisNum="1" />
		</axis_bind>
		<axis_bind action="RotateY">
			<input xsi:type="orsave:MouseMovementInputType" axisNum="0" />
		</axis_bind>
		<axis_bind action="RotateZ">
			<input xsi:type="orsave:PseudoAxisInputType" posInvert="false" negInvert="true">
				<negative xsi:type="orsave:MouseButtonInputType" buttonNum="1" />
				<positive xsi:type="orsave:MouseButtonInputType" buttonNum="3" />
			</input>
		</axis_bind>
	</inputDevice>
</preset>

<preset>
	<presetName>PS3 Controller</presetName>
	<deviceMatchString>PLAYSTATION(R)3</deviceMatchString>
	<inputDevice device="Gamepad">
		<axis_bind action="TranslateX">
			<input xsi:type="orsave:GamepadAxisInputType" gamepadNum="0" axisNum="0" />
		</axis_bind>
		<axis_bind action="TranslateY">
			<input xsi:type="orsave:GamepadAxisInputType" gamepadNum="0" axisNum="1" />
		</axis_bind>
		<axis_bind action="TranslateZ">
			<input xsi:type="orsave:PseudoAxisInputType" posInvert="false" negInvert="true">
				<negative xsi:type="orsave:GamepadAxisInputType" gamepadNum="0" axisNum="12" />
				<positive xsi:type="orsave:GamepadAxisInputType" gamepadNum="0" axisNum="13" />
			</input>
		</axis_bind>
		<axis_bind action="RotateX">
			<input xsi:type="orsave:GamepadAxisInputType" gamepadNum="0" axisNum="3" />
		</axis_bind>
		<axis_bind action="RotateY">
			<input xsi:type="orsave:GamepadAxisInputType" gamepadNum="0" axisNum="2" />
		</axis_bind>
		<axis_bind action="RotateZ">
			<input xsi:type="orsave:PseudoAxisInputType" posInvert="false" negInvert="true">
				<negative xsi:type="orsave:GamepadAxisInputType" gamepadNum="0" axisNum="14" />
				<positive xsi:type="orsave:GamepadAxisInputType" gamepadNum="0" axisNum="15" />
			</input>
		</axis_bind>
		<axis_bind action="UIX">
			<input xsi:type="orsave:PseudoAxisInputType" posInvert="false" negInvert="true">
				<negative xsi:type="orsave:GamepadButtonInputType" gamepadNum="0" buttonNum="7" />
				<positive xsi:type="orsave:GamepadButtonInputType" gamepadNum="0" buttonNum="5" />
			</input>
		</axis_bind>
		<axis_bind action="UIY">
			<input xsi:type="orsave:PseudoAxisInputType" posInvert="false" negInvert="true">
				<negative xsi:type="orsave:GamepadButtonInputType" gamepadNum="0" buttonNum="4" />
				<positive xsi:type="orsave:GamepadButtonInputType" gamepadNum="0" buttonNum="6" />
			</input>
		</axis_bind>
		<button_bind action="Pause">
			<input xsi:type="orsave:GamepadButtonInputType" gamepadNum="0" buttonNum="3" />
		</button_bind>
		<button_bind action="ResetNeutral">
			<input xsi:type="orsave:GamepadButtonInputType" gamepadNum="0" buttonNum="16" />
		</button_bind>
		<button_bind action="Confirm">
			<input xsi:type="orsave:GamepadButtonInputType" gamepadNum="0" buttonNum="13" />
		</button_bind>
		<button_bind action="Cancel">
			<input xsi:type="orsave:GamepadButtonInputType" gamepadNum="0" buttonNum="14" />
		</button_bind>
	</inputDevice>
</preset>

</orsave:presets>
